# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def kthSmallest(self, root: Optional[TreeNode], k: int) -> int:
        pOrder = []
        self.order(root, pOrder)
        return pOrder[k - 1]

    def order(self, root, pOrder):
        if root:
            if root.left:
                self.order(root.left, pOrder)
            pOrder.append(root.val)
            if root.right:
                self.order(root.right, pOrder)
